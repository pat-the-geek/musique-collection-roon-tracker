# Spotify API (pour enrichissement des images)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Last.fm API (pour historique d'écoute)
API_KEY=your_lastfm_api_key_here
API_SECRET=your_lastfm_api_secret_here
LASTFM_USERNAME=your_lastfm_username_here

# Discogs API (pour récupération de collection)
DISCOGS_API_KEY=your_discogs_api_key_here
DISCOGS_USERNAME=your_discogs_username_here

# EurIA API (pour génération de haïkus)
URL=https://api.infomaniak.com/2/ai/106561/openai/v1/chat/completions
bearer=your_euria_bearer_token_here
max_attempts=5
default_error_message=Aucune information disponible

# Chemin vers la bibliothèque musicale (optionnel)
MUSIC_LIBRARY_PATH=/path/to/your/music/library
